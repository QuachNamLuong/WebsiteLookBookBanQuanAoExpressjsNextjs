generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CUSTOMER
}

model User {
  @@map("users")
  userId String @id @default(uuid()) @map("user_id")
  username String @unique
  email String @unique
  passwordHash String @unique @map("password_hash")
  role Role

  orders Order[]
  ratings Rating[]
  carts  Cart[]
}

model Product {
  @@map("products")

  productId    String        @id @default(uuid()) @map("product_id")
  productName  String        @unique @map("product_name")
  quantity     Int
  createdAt    DateTime      @default(now())
  updateAt     DateTime      @default(now()) @updatedAt()
  price        Decimal
  material     String
  color        String
  nameMeaning  String
  style        String
  usage        String

  productImage ProductImage[]
  orderItems   OrderItem[]
  cartItems    CartItem[]
  ratings Rating[]
  productSizes ProductSize[]
}

model ProductSize {
  id    Int @id @default(autoincrement())
  size  Size @unique
  products Product[]
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

model ProductImage {
  @@map("product_images")

  productImageId String @id @default(uuid()) @map("product_image_id")
  productImageUrl String @unique
  productImageName String @unique @map("product_image_name")
  objectName String @unique
  productId String

  product Product @relation(fields: [productId], references: [productId], onDelete: Cascade)
}

model Order {
  @@map("orders")

  orderId String @id @default(uuid()) @map("order_id")
  orderTotalPrice Decimal @map("order_total_price")
  
  userId String
  user User  @relation(fields: [userId], references: [userId])

  orderItems OrderItem[]
}

model OrderItem {
  @@map("order_items")

  orderItemId String @id @default(uuid()) @map("order_item_id")
  orderItemQuantity Int @map("order_item_quantity")
  orderItemUnitPrice Decimal @map("order_item_unit_price")

  orderId String
  order Order @relation(fields: [orderId], references: [orderId])

  productId String
  product Product @relation(fields: [productId], references: [productId])
}

model Cart {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  isActive  Boolean    @default(true)
  user      User       @relation(fields: [userId], references: [userId])
  userId    String
  cartItems     CartItem[]
}

model CartItem {
  @@map("cart_items")

  id String @id @default(uuid())
  quantity Int
  productId String
  product Product @relation(fields: [productId], references: [productId])
  cart      Cart     @relation(fields: [cartId], references: [id])
  cartId    String
}

model Rating {
  id        String      @id @default(uuid())
  userId    String
  productId String
  rate      RateNumber
  comment   String?     
  createdAt DateTime    @default(now())

  product   Product     @relation(fields: [productId], references: [productId])
  user      User        @relation(fields: [userId], references: [userId])
}

enum RateNumber {
  ONE    @map("1")
  TWO    @map("2")
  THREE  @map("3")
  FOUR   @map("4")
  FIVE   @map("5")
}