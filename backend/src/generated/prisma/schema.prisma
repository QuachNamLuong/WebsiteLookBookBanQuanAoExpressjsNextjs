generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CUSTOMER
}

model User {
  userId       String @id @default(uuid()) @map("user_id")
  username     String @unique
  email        String @unique
  passwordHash String @unique @map("password_hash")
  role         Role

  orders    Order[]
  cartItems CartItem[]

  @@map("users")
}

model Product {

  productId    String         @id @default(uuid()) @map("product_id")
  productName  String         @unique @map("product_name")
  quantity     Int
  productImage ProductImage[]
  orderItems   OrderItem[]
  cartItems    CartItem[]

  @@map("products")
}

model ProductImage {

  productImageId   String @id @default(uuid()) @map("product_image_id")
  productImageName String @unique @map("product_image_name")
  productId        String

  product Product @relation(fields: [productId], references: [productId])

  @@map("product_images")
}

model Order {

  orderId         String  @id @default(uuid()) @map("order_id")
  orderTotalPrice Decimal @map("order_total_price")

  userId String
  user   User   @relation(fields: [userId], references: [userId])

  orderItems OrderItem[]

  @@map("orders")
}

model OrderItem {

  orderItemId        String  @id @default(uuid()) @map("order_item_id")
  orderItemQuantity  Int     @map("order_item_quantity")
  orderItemUnitPrice Decimal @map("order_item_unit_price")

  orderId String
  order   Order  @relation(fields: [orderId], references: [orderId])

  productId String
  product   Product @relation(fields: [productId], references: [productId])

  @@map("order_items")
}

model CartItem {

  id        String  @id @default(uuid())
  quantity  Int
  userId    String
  user      User    @relation(fields: [userId], references: [userId])
  productId String
  product   Product @relation(fields: [productId], references: [productId])

  @@map("cart_items")
}

model LookBookStory {

  id          String @id @default(uuid())
  name        String
  description String

  @@map("look_book_stories")
}
